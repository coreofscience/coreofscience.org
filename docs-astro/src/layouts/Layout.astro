---
import Base from "./Base.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
  slogan?: string;
}

const {
  title = "Core of <strong>Science</strong>",
  slogan = "<strong>connecting people</strong> through sharing knowledge",
} = Astro.props;
---

<Base title={title}>
  <Header title={title} slogan={slogan} />
  <main>
    <slot />
  </main>
  <Footer />
</Base>
